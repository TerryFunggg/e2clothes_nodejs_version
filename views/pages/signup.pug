include ../components/header.pug

div(class="flex justify-center h-screen w-full items-center")
    form(class="form pt-2 pb-6 px-10 md:px-20 shadow-2xl bg-white rounded-lg" method="POST" action="/signup")
        div(class="my-6")
            h1(class="inline text-2xl text-bold tracking-wider uppercase") SignUp
            i(class="inline ml-2 text-xl fas fa-rocket")
        div(class="md:grid md:grid-cols-2 gap-2")

            div(class="my-2")
                label(class="" for="firstName") First Name:
                input(id="firstName" name="firstName" type="text" data-loginForm-target="firstName" placeholder="Enter your first name" required)

            div(class="my-2")
                label(class="" for="lastName") Last Name:
                input(id="lastName" name="lastName" type="text" data-loginForm-target="lastName" placeholder="Enter your last name" required)

            div(class="my-2 col-span-2")
                label(class="" for="userName") User Name:
                input(id="userName" name="userName" type="text" data-loginForm-target="userName" placeholder="Enter your user name" required)

            div(class="my-2")
                label(class="" for="email") Email:
                input(id="email" name="email" type="email" data-loginForm-target="email" placeholder="Enter your email" required)

            div(class="my-2")
                label(class="" for="phone") Phone:
                input(id="phone" name="phone" type="text" data-loginForm-target="phone" placeholder="Enter your phone" required)

            div(class="my-2 col-span-2")
                label(class="" for="password") Password:
                input(id="password" name="password" type="password" data-loginForm-target="password" placeholder="Enter your password" required)


            if errors
                div(class="error-box col-span-2" data-loginForm-target="errBox")
                    each error in errors
                        div(class="flex items-center")
                            i(class="far fa-times-circle")
                            p(class="ml-2") #{error}
            if error
                div(class="error-box col-span-2" data-loginForm-target="errBox")
                    div(class="flex items-center")
                        i(class="far fa-times-circle")
                        p(class="ml-2") #{error}


            div(class="mt-8 col-span-2 text-right")
                button(class="submit-btn") Submit

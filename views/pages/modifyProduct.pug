extends ../layouts/main.pug

block content
    div(class="flex flex-col justify-start p-10" data-controller="modifyproduct")
        form(id="form-modifyproduct" class="form pt-2 pb-6 px-10 md:px-20 shadow-2xl bg-white rounded-lg")
            div(class="md:grid md:grid-cols-2 gap-2")
                input(id="id" name="id" class="hidden" type="text" value=product.id required)
                div(class="my-2")
                    label(class="" for="image") Product Image:
                    input(id="image" name="image" type="file"   required)

                div(class="my-2")
                    img(class="w-40 h-40" id="preview" src=product.image)

                div(class="my-2 col-span-2")
                    label(class="" for="name") Product Name:
                    input(id="name" name="name" type="text" value=product.name placeholder="Enter your product name"  required)

                div(class="my-2 col-span-2")
                    label(class="" for="decription") Description:
                    textarea(id="decription" class="border p-4 w-full" value=product.decription name="decription" placeholder="Enter Description" required)

                div(class="my-2")
                    label(class="" for="price") Product Price:
                    input(id="price" name="price" type="number" value=product.price   required)

                div(class="my-2")
                    label(class="" for="quality") Product Quality:
                    input(id="quality" name="quality" type="number" value=product.quality required)

            div(class="mt-8 col-span-2 text-right")
                button(class="submit-btn" data-action="modifyproduct#submit") Submit
